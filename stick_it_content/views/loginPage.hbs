<body>
    <div class="box">
            <form action="/login" method="POST" role="form" enctype="application/x-www-form-urlencoded">
                <legend>Login</legend>
                <label for="email">Email:</label>
                <br>
                <input type="text" id="email" name="email" required="true">
                <br>
                <label for="password">Password:</label>
                <br>
                <input type="text" id="password" name="password" required="true">
                <br>
                <button type="submit" class="btn btn-primary" id="loginBtn">Log in</button>
            </form>
    </div>
</body>