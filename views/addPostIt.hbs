<body>
    <div class="container-form" id="add-form">
      <form action="/postit" method="post" role="form" enctype="application/x-www-form-urlencoded">
        <legend> Add a Post It </legend>
        <h1>{{message}}</h1>

        <label for="title"> Title of Post It </label>
        <input type="text" id="title" name="title">

        <label for="description"> Description of Post It </label>
        <input type="text" id="description" name="description">

        <label for="pinned">
          <input type="checkbox" id="pinned" name="pinned"/> Urgent: Pin it!
        </label>

        <select name="weekday" id="weekday">
            <option value="monday">Monday</option>
            <option value="tuesday">Tuesday</option>
            <option value="wednesday">Wednesday</option>
            <option value="thursday">Thursday</option>
            <option value="friday">Friday</option>
            <option value="saturday">Saturday</option>
            <option value="sunday">Sunday</option>
        </select>

        <select name="category" id="category">
        {{#each category}}
        <option value={{title}}>{{title}}</option>
        {{/each}}
        </select> 

        <button type="submit"> Confirm </button>
      </form>
    </div>
</body>